.card.panel{:class => user.assignments.size == 0 ? "panel-warning" : "panel-default"}
  .panel-heading
    %strong= user.name
    .pull-right
      = link_to new_assignment_path, class: "add-assignment" do
        %i.fa.fa-plus-square.fa-2x.blue

  .panel-body
    %ul
      - user.assignments.each do |assignment|
        %li
          = link_to assignment_path(assignment), method: :delete, class: "delete-assignment" do
            %i.fa.fa-minus-circle.red
          = assignment.student.name

