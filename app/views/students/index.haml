%h1
  Your Students
  .pull-right
    = link_to "add a student", new_student_path, class: "btn btn-primary"


%table.table.table-hover#students
  %thead
    %tr
      %th First Name
      %th Last Name
      %th School
      %th Year Level
      %th
  %tbody
    - @students.each do |student|
      %tr
        %td= student.first_name
        %td= student.last_name
        %td= student.school
        %td= student.year_level_name
        %td= link_to "edit student", edit_student_path(student), class: "btn btn-primary"
