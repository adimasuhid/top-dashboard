.form-group
  = f.label "Session Date"
  = f.text_field :session_date, class: "form-control datepicker", placeholder: "Session Date", data: {format:"YYYY-MM-DD"}
.form-group
  = f.label "student"
  %br
  = f.select :student_id, options_for_select(select_options(@students, :name))
.form-group
  = f.label 'duration'
  = f.text_field :duration, class: "form-control", placeholder: "In Hours (ie 1.5)"
.form-group
  = f.label "notes"
  = f.text_area :notes, class: "form-control", placeholder: "Notes"
= f.submit "Save Student", class: "btn btn-primary"

:javascript
  $(document).ready(function(){
    $('.datepicker').datetimepicker({
      pickTime: false
    });
  })
